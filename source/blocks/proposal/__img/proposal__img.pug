mixin proposal__img(modifier)
  if modifier.imgName == undefined
      - modifier.imgName = "pagoda";
  case modifier.imgName
    when 'pagoda'
      img(src=require('../../img/proposals/pagoda.png') alt="pagoda" class='proposal__img')&attributes(attributes)
    when 'colored_wall'
      img(src=require('../../img/proposals/colored_wall.png') alt="colored_wall" class='proposal__img')&attributes(attributes)
    when 'home_blue_sky'
      img(src=require('../../img/proposals/home_blue_sky.png') alt="home_blue_sky" class='proposal__img')&attributes(attributes)
    when 'laptop'
      img(src=require('../../img/proposals/laptop.png') alt="laptop" class='proposal__img')&attributes(attributes)
    when 'laptops'
      img(src=require('../../img/proposals/laptops.png') alt="laptops" class='proposal__img')&attributes(attributes)
    when 'paporotnik'
      img(src=require('../../img/proposals/paporotnik.png') alt="paporotnik" class='proposal__img')&attributes(attributes)
    when 'pencil_and_ruller'
      img(src=require('../../img/proposals/pencil_and_ruller.png') alt="pencil_and_ruller" class='proposal__img')&attributes(attributes)
    when 'rubber'
      img(src=require('../../img/proposals/rubber.png') alt="rubber" class='proposal__img')&attributes(attributes)
    when 'submarine'
      img(src=require('../../img/proposals/submarine.png') alt="submarine" class='proposal__img')&attributes(attributes)
