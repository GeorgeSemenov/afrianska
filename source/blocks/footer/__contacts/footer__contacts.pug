mixin footer__contacts(modifier)
  ul.footer__contacts&attributes(attributes)
    if modifier.contactsArr == undefined
        - modifier.contactsArr = [{letter: 'A', text:'Lorem ipsum dolor sit amet, consectetur adipisicing elit.'}, {letter: 'T', text:'+62-812-7313-4321'}, {letter: 'E', text:'hello.afrian@gmail.com'}];
    each contact in modifier.contactsArr
      +footer__contact(contact)